NORMAL (accept) <-- the start state
   /:  SAW_SLASH (Action: None, do not print / yet)
   ":  IN_STRING (Action: print ")
   ':  IN_CHAR (Action: print ')
   other:  NORMAL (Action: print char)

SAW_SLASH (accept)
   *:  IN_COMMENT (Action: print ' ')
   /:  SAW_SLASH (Action: print '/')
   ":  IN_STRING (Action: print '/', then print ")
   ':  IN_CHAR (Action: print '/', then print ')
   other:  NORMAL (Action: print '/', then print char)

IN_COMMENT (reject)
   *:  SAW_STAR_IN_COMMENT (Action: none)
   newline:  IN_COMMENT (Action: print newline)
   other:  IN_COMMENT (Action: none)

SAW_STAR_IN_COMMENT (reject)
   /:  NORMAL (Action: none)
   *:  SAW_STAR_IN_COMMENT (Action: none)
   newline:  IN_COMMENT (Action: print newline)
   other:  IN_COMMENT (Action: none)

IN_STRING (accept)
   \:  ESCAPE_IN_STRING (Action: print \)
   ":  NORMAL (Action: print ")
   other:  IN_STRING (Action: print char)

ESCAPE_IN_STRING (accept)
   other:  IN_STRING (Action: print char)

IN_CHAR (accept)
   \:  ESCAPE_IN_CHAR (Action: print \)
   ':  NORMAL (Action: print ')
   other:  IN_CHAR (Action: print char)

ESCAPE_IN_CHAR (accept)
   other:  IN_CHAR (Action: print char)


